{
  "manifest_version": 2,
  "name": "Delete Elements",
  "version": "dev: 1.0",

  "background": {
    "scripts": [ "background.js" ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "icons": {
    "48": "icons/delete_element_48.png"
  },

  "permissions": [ "contextMenus", "storage" ],
  
  "commands": {
    "undo": {
      "suggested_key": { "default": "Ctrl+Alt+Z" },
      "description": "Undos deletion of element"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "todo@changeidforsavingsettingstostoragetosomethingpertinent.com"
    }
  },

  "browser_action": {
    "default_icon": "icons/delete_element_32.png",
    "default_title": "Delete Elements",
    "default_popup": "popup/settings.html"
  }
}